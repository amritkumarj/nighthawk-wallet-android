<resources>

    <!-- Application theme -->

    <style name="NighthawkBaseTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="shapeAppearanceSmallComponent">@style/Nighthawk.ShapeAppearance.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/Nighthawk.ShapeAppearance.MediumComponent
        </item>

    </style>

    <style name="NighthawkTheme" parent="NighthawkBaseTheme" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ns_dark_navy</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/NighthawkTheme</item>
    </style>


    <style name="NighthawkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NighthawkTheme.PrimaryHighlight">
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <!-- Widgets -->

    <style name="Nighthawk.TextView.NumberPad" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/Nighthawk.TextAppearance.NumberPad</item>
        <item name="android:background">@drawable/selector_pressed_ripple_circle</item>
    </style>

    <style name="Nighthawk.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/selector_primary_button_background</item>
        <item name="android:textColor">@color/selector_primary_button_text_color</item>
    </style>

    <style name="Nighthawk.Button.Secondary" parent="Nighthawk.Button">
        <item name="android:backgroundTint">@color/ns_navy</item>
        <item name="android:textColor">@color/ns_parmaviolet</item>
    </style>

    <style name="Nighthawk.Button.Normal" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/ns_peach_100</item>
        <item name="android:textColor">@color/ns_dark_navy</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>

    </style>

    <style name="Nighthawk.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/ns_peach_100</item>
        <item name="android:textColor">@color/ns_peach_100</item>
    </style>

    <style name="Nighthawk.Button.OutlinedButton.Primary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="Nighthawk.Button.NoOutline" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/ns_peach_100</item>
    </style>

    <style name="DigitImageButton">
        <item name="android:theme">@style/NighthawkTheme.PrimaryHighlight</item>
        <item name="srcCompat">@drawable/unfilled_password_digit</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Nighthawk.TextInput.Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/zcashWhite</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <!-- Text Appearances -->

    <style name="Nighthawk.TextAppearance.NumberPad" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/selector_button_text_light</item>
    </style>

    <style name="Nighthawk.TextAppearance.AddressPart" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inconsolata</item>
        <item name="fontFamily">@font/inconsolata</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Nighthawk.TextAppearance.Zec" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/zboto</item>
        <item name="fontFamily">@font/zboto</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Nighthawk.TextAppearance.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="Nighthawk.TextAppearance.Zboto" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/zboto</item>
        <item name="fontFamily">@font/zboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Nighthawk.TextAppearance.H1.Bold" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ns_white</item>
    </style>

    <style name="Nighthawk.TextAppearance.Body1" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.0316</item>
    </style>

    <!-- Shape Appearances -->

    <!-- General: buttons -->
    <style name="Nighthawk.ShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- General: dialogs -->
    <style name="Nighthawk.ShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Component -->
    <style name="Nighthawk.ShapeAppearance.TextInputLayout" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="backgroundColor">@color/ns_navy</item>
    </style>

    <!-- Theme Overlays -->
    <style name="Nighthawk.Overlay.TextInputLayout" parent="ThemeOverlay.MaterialComponents">
        <item name="shapeAppearanceSmallComponent">@style/Nighthawk.ShapeAppearance.TextInputLayout</item>
    </style>

    <style name="Nighthawk.Overlay.TextInputLayout.HelperTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ns -->
    <style name="Nighthawk.MaterialComponents.Headline1" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/ns_peach_100</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">21sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Nighthawk.MaterialComponents.Headline1.Bold" parent="Nighthawk.MaterialComponents.Headline1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Nighthawk.MaterialComponents.Headline2" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/ns_peach_100</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Nighthawk.MaterialComponents.Body" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/ns_white</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Nighthawk.MaterialComponents.Text.Dark" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/ns_dark_navy</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Nighthawk.MaterialComponents.Text.Light" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/ns_peach_20</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Nighthawk.MaterialComponents.SubText" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textColor">@color/ns_white</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="BottomNavigationView.TextAppearance" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>


</resources>
