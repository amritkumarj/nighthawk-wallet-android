<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/Nighthawk.MaterialComponents.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ns_recent_activity"
        android:textColor="@color/ns_parmaviolet"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/receivedView"
        layout="@layout/item_transaction_wallet_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <include
        android:id="@+id/sentView"
        layout="@layout/item_transaction_wallet_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/receivedView" />

    <TextView
        android:id="@+id/tvViewAllTransactions"
        style="@style/Nighthawk.MaterialComponents.Headline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:text="@string/ns_view_all_transactions"
        app:drawableEndCompat="@drawable/ic_arrow_right"
        app:layout_constraintTop_toBottomOf="@id/sentView" />

</androidx.constraintlayout.widget.ConstraintLayout>
